
@{
    ViewData["Title"] = "xD";
}


<script src="~/modules/jquery/dist/jquery.min.js"></script>
<script src="~/modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/index.js"></script>
@RenderSection("Scripts", false)

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="~/modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/modules/font-awesome/css/font-awesome.min.css"/>
    <link href="~/css/index.css" rel="stylesheet" />
    <title>dutch treat:  @ViewBag.Title</title>
</head>
<body>

    <header class="container-fluid">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand"><i class="fa fa-paint-brush"></i>Dutch Treat</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="theMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="About">About</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                <li class="nav-item float-right">
                    <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }

                </ul>
            </div>
        </nav>
    </header>

    <section class="container">
        <h2>@ViewBag.Title</h2>

        @RenderBody()

    </section>

    <footer class="container">
        <div class="text-center">Copyrights 2022</div>
    </footer>

</body>
</html>

